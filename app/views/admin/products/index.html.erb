<div class="d-flex align-items-center justify-content-between mt-5">
  <h1 class="mt-0">商品一覧</h1>
  <%= page_entries_info @products %>
</div>
<div class="mt-5">
  <table class="table align-middle">
    <thead>
      <tr class="row">
        <th class="col-2 col-sm-1 col-md-1">No</th>
        <th class="col-7 col-sm-8 col-md-9">商品名</th>
        <th class="col-3 col-sm-3 col-md-2"></th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr class="row">
          <td class="col-2 col-sm-1 col-md-1"><%= product.id %></td>
          <td class="col-7 col-sm-8 col-md-9 text-truncate">
            <%= product.name %>
          </td>
          <td class="col-3 col-sm-3 col-md-2 text-center">
            <%= link_to  edit_admin_product_path(id: product.id), class: 'btn btn-success rounded-circle' do %>
              <i class="bi bi-pencil-square"></i>
            <% end %>
            <%= link_to [:admin, product], data: { turbo_method: :delete, turbo_confirm: "商品「#{product.name}」を削除してもよろしいですか？" }, class: 'btn btn-dark rounded-circle' do %>
              <i class="bi bi-trash"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="d-flex justify-content-center mt-5">
  <%= paginate @products, theme: 'bootstrap-5' %>　
</div>
