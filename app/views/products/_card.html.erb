<div class="col mb-5">
  <div class="card h-100">
    <%= link_to product do %>
      <% if product.is_sale %>
        <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">セール</div>
      <% end %>
      <%= image_tag image(product), class: 'card-img-top' %>
      <div class="card-body p-4">
        <div class="text-center">
          <h5 class="fw-bolder"><%= product.name %></h5>
          <% if product.discount_price  %>
            <span class="text-muted text-decoration-line-through"><%= format_price(product.min_price) %></span>
            <span><%= format_price(product.discount_price) %></span>
          <% else %>
            <%= product.max_price ? "#{format_price(product.min_price)} - #{format_price(product.max_price)}" : format_price(product.min_price) %>
          <% end %>
        </div>
      </div>
    <% end %>
    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
      <%= form_with url: "/add_item/#{product.id}" do%>
        <div class="text-center">
          <button type="submit" class="btn btn-outline-dark mt-auto">カートに追加</button>
        </div>
      <% end %>
    </div>
  </div>
</div>
